@model QuanLySinhVien.Models.DTO.KhoaDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var years = new List<SelectListItem>();
    for (int year = 2000; year <= 2050; year++)
    {
        years.Add(new SelectListItem(year.ToString(), year.ToString()));
    }
}
<main>
    <div class="container-fluid px-4 pt-2">
        <h1>Sửa</h1>

        <h4>Khoa</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaKhoa" />
                    <div class="form-group">
                        <label class="control-label">Mã khoa</label>
                        <input class="form-control" type="text" value="@Model.MaKhoa" disabled />
                      
                    </div>
                    <div class="form-group">
                        <label asp-for="TenKhoa" class="control-label">Tên Khoa</label>
                        <input asp-for="TenKhoa" class="form-control" />
                        <span asp-validation-for="TenKhoa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NamThanhLap" class="control-label"> Năm thành lập</label>
                        <select class="form-select w-50" asp-for="NamThanhLap" asp-items="years"></select>
                        <span asp-validation-for="NamThanhLap" class="text-danger"></span>
                    </div>
                    <div class="form-group  mt-4 mb-2">
                        <input type="submit" value="Save" class="btn btn-primary" /> 
                       
                    </div>
                    <a asp-action="Index">Quay lại</a>
                </form>
            </div>
        </div>

        
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
